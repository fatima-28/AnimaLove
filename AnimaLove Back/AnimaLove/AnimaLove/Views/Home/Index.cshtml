@using AnimaLove.ViewModels

@model HomeViewModel
@{
    ViewData["Title"] = "Index";
}

<!-- main started -->
<main>
    <!-- slider section started -->
    <section id="slider">
        <div class="slider-box">
            <div class="slider-text">
                <div class="slider-text-inner">

                    @foreach (var summary in Model.SlideSummaries)
                    {
                        <h3>@summary.Title</h3>
                        <p>
                            @summary.Description
                        </p>
                    }

                </div>
            </div>
            <div class="slider-box-inner">

                @foreach (var slide in Model.Slides)
                {
                    <div><img src="~/assets/img/@slide.Image" alt="animal-image"></div>
                }



               

            </div>
        </div>
    </section>
    <!-- slider section end -->
    <!-- adopt  pet section started -->
    <section id="adoption">
        <div class="adoption">
            <div class="adoption-inner">
                <div class="adoption-title" data-aos="fade-down" data-aos-duration="1000">
                    <p style="font-size:70px; font-weight:700;">Adopt Pet</p>
                </div>
               
                <div class="cards">

                    <div class="cards-row container"  >


                        @foreach (var pet in Model.Pets)
                        {
                            <div class="column" data-aos="fade-down" data-aos-duration="2000">
                                <div class="card-item ">
                                    <div class="animal-image">
                                        <img src="~/assets/img/@pet.Image" alt="animal image">
                                    </div>
                                    <div class="animal-context">
                                        <p class="animal-name">@pet.Name</p>
                                        <p class="animal-message">
                                           @pet.Description
                                        </p>
                                        <div class="main-adopt-button">
                                            <div class="adopt-button">
                                                <a href="www">Adopt</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>

                </div>

            </div>
           
        </div>
    </section>
